{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nexus",
  "version": "0.1.1",
  "identifier": "com.hp.nexus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
      "title": "Nexus",
      "label": "main",
      "width": 1400,
      "height": 900,
      "fullscreen": false,
      "maximized": true,   
      "visible": false,
      "resizable": true
    },
    {
      "title": "Loading...",
      "width": 650,
      "height": 650,
      "label": "splashscreen",
      "url": "splashscreen.html", 
      "decorations": false,
      "center": true,
      "resizable": false,
      "alwaysOnTop": true,
      "visible": true
      
    },
    {
        "label": "setupwizard",
        "url": "index.html#/setup",
        "title": "Nexus Medical - Setup",
        "width": 1200,
        "height": 900,
        "decorations": true,
        "resizable": false,
        "center": true,
        "visible": false,
        "closable": true
    }
    ],
    "security": {
      "csp": "default-src 'self' tauri: data: blob: filesystem:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' tauri: ws: wss: http://ipc.localhost; img-src 'self' asset: data: blob:; font-src 'self' data:;",
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "licenseFile": "license.txt",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "en-US",
        "fipsCompliant": true
      },
      "nsis": {
        "installerHooks": "installer.nsh",
        "template": "template.nsi",
        "languages": ["English"],
        "compression": "lzma"
      
      }
    },
    "publisher": "Prime Ltd", 
    "copyright": "Copyright (c) 2025, Prime Ltd"
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "windows": {
        "installMode": "basicUi"
      },
      "endpoints": [
        "https://github.com/prime2014/nexus/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI0RjgzNjQ4MzNERkIxQzkKUldUSnNkOHpTRGI0dEF2QUJNNlprVHY2eEJzTjBjMXdhL2F6Z1dDVllCbmt2UEhHNjdxUWVJelcK"
    }
  }
}
