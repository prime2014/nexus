{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nexus",
  "version": "0.1.0",
  "identifier": "com.hp.nexus",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
      "title": "Serial Monitor",
      "label": "main",
      "width": 1400,
      "height": 900,
      "fullscreen": false,
      "maximized": true,   
      "visible": false,
      "resizable": true
    },
    {
      "title": "Loading...",
      "width": 600,
      "height": 600,
      "label": "splashscreen",
      "url": "/src/splashscreen.html", 
      "decorations": false,
      "center": true,
      "resizable": false,
      "alwaysOnTop": true
    },
    {
        "label": "setupwizard",
        "url": "setup.html",
        "title": "Nexus Medical - Setup",
        "width": 650,
        "height": 580,
        "resizable": false,
        "center": true,
        "visible": false
    }
    ],
    "security": {
      "csp": "default-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
